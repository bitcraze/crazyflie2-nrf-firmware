#!/usr/bin/env bash
set -e

# Check if we can use wget or curl
download_cmd="wget -O "
if hash curl 2>/dev/null; then
    download_cmd="curl -L -o "
fi

scriptDir=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
root="${scriptDir}/../.."

sdkDir=${root}/nrf51_sdk
sdkZip=${sdkDir}/nrf51_sdk_v6_1_0_b2ec2e6.zip
if [ ! -f ${sdkZip} ]; then
    $(${download_cmd} ${sdkZip} https://developer.nordicsemi.com/nRF51_SDK/nRF51_SDK_v6.x.x/nrf51_sdk_v6_1_0_b2ec2e6.zip)
    unzip -q ${sdkZip} -d ${sdkDir}
fi

s110Dir=${root}/s110
s110Zip=${s110Dir}/s110_nrf51822_7.3.0.zip
if [ ! -f ${s110Zip} ]; then
    $(${download_cmd} ${s110Zip} https://www.nordicsemi.com/-/media/Software-and-other-downloads/SoftDevices/S110/s110nrf51822730.zip?la=en&hash=BB921F4E2B47C8BF4B87783ED0F5DC235FB70287)
    unzip -q ${s110Zip} -d ${s110Dir}
fi
